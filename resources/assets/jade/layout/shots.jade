include ../mixins/blade

.shots
    ul.slider
        +php('$i=0;')
        +foreach("$data['shots'] as $shot")
            +phpblock.
                if($i%12 == 0):
                    echo $i > 0 ? "</ul></li>" : "";
                    echo '<li class="slide"><ul class="list">';
                endif;
            li.shot
                a.link(href!="{{ url('shot/' . $shot->slug) }}")
                    img.img(src!="{{ url($shot->image_small) }}")
            +php('$i++;')
