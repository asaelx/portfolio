extend layout/base

block title
    title New program

block admin
    
    include layout/admin-topbar
    include mixins/blade
    
    .admin
        
        h2.title Add new program
        
        +if('isset($program)')
            | {!! Form::open(['url' => 'admin/program/edit/' . $program->id, 'files' => true, 'class' => 'form']) !!}
            +else
                | {!! Form::open(['url' => 'admin/program/create', 'files' => true, 'class' => 'form']) !!}
    
        .group
            | {!! Form::label('icon', 'Select an icon', ['class' => 'label-file']) !!}
            | {!! Form::file('icon') !!}
            +if('isset($program)')
                img.image(src!="{{ url($program->icon) }}")
        
        .group
            +if('isset($program)')
                | {!! Form::text('name',  $program->name, ['class' => 'input']) !!}
                +else
                    | {!! Form::text('name',null, ['class' => 'input']) !!}
            | {!! Form::label('name', 'Name', ['class' => 'label']) !!}
        
        .group
            +if('isset($program)')
                | {!! Form::submit('Update', ['class' => 'btn green']) !!}
                +else
                    | {!! Form::submit('Add', ['class' => 'btn green']) !!}
        
        | {!! Form::close() !!}
